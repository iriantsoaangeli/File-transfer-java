<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.filetransfer.controller.MainController" 
            prefHeight="900.0" prefWidth="1200.0">
    
    <top>
        <VBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label text="Network File Transfer" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label text="Port 8080 • miyabi69 Protocol • Queued Transfers (Max 3 Concurrent)" style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px;"/>
        </VBox>
    </top>
    
    <center>
        <SplitPane dividerPositions="0.35, 0.65" orientation="VERTICAL">
            <!-- Device Dashboard -->
            <ScrollPane fitToWidth="true" fitToHeight="true">
            <VBox spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Network Devices" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="scanButton" text="Scan Network" onAction="#handleScan" 
                            style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
                    <Button fx:id="handshakeButton" text="Handshake" onAction="#handleHandshake"
                            style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
                </HBox>
                
                <TableView fx:id="deviceTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="ipColumn" text="IP Address" prefWidth="200"/>
                        <TableColumn fx:id="hostnameColumn" text="Hostname" prefWidth="200"/>
                        <TableColumn fx:id="statusColumn" text="Status" prefWidth="150"/>
                    </columns>
                </TableView>
                
                <Label fx:id="selectedDeviceLabel" text="No device selected" 
                       style="-fx-font-style: italic; -fx-text-fill: #7f8c8d;"/>
                
                <!-- File Transfer Section -->
                <Separator/>
                
                <Label text="File Transfer" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button text="Select File" onAction="#handleSelectFile"/>
                    <Label fx:id="selectedFileLabel" text="No file selected" 
                           style="-fx-font-style: italic; -fx-text-fill: #7f8c8d;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="sendFileButton" text="Send File (Add to Queue)" onAction="#handleSendFile"
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;"/>
                </HBox>
                
                <!-- Transfer Progress Bar -->
                <VBox fx:id="progressBox" spacing="5" managed="false" visible="false">
                    <Label fx:id="progressLabel" text="Transfer in progress..." style="-fx-font-size: 12px;"/>
                    <ProgressBar fx:id="progressBar" prefWidth="Infinity" progress="0"/>
                </VBox>
                
                <Separator/>
                
                <!-- Mailbox Configuration -->
                <Label text="Mailbox Configuration" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Mailbox Path:"/>
                    <TextField fx:id="mailboxPathField" HBox.hgrow="ALWAYS"/>
                    <Button text="Apply" onAction="#handleSetMailbox"/>
                </HBox>
            </VBox>
            </ScrollPane>
            
            <!-- Transfer Queues Section -->
            <ScrollPane fitToWidth="true" fitToHeight="true">
            <VBox spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                
                <Label text="Transfer Queues" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                
                <SplitPane dividerPositions="0.5">
                    <!-- Outgoing Queue -->
                    <VBox spacing="5">
                        <Label text="Outgoing Files (Sending)" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;"/>
                        <TableView fx:id="outgoingQueueTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="outgoingFileColumn" text="File" prefWidth="200"/>
                                <TableColumn fx:id="outgoingToColumn" text="To" prefWidth="120"/>
                                <TableColumn fx:id="outgoingSizeColumn" text="Size" prefWidth="80"/>
                                <TableColumn fx:id="outgoingStatusColumn" text="Status" prefWidth="180"/>
                            </columns>
                        </TableView>
                        <Label text="Files are sent automatically after receiver approves (3 max concurrent)" 
                               style="-fx-font-size: 10px; -fx-text-fill: #7f8c8d;"/>
                    </VBox>
                    
                    <!-- Incoming Queue -->
                    <VBox spacing="5">
                        <Label text="Incoming Files (Receiving)" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2ecc71;"/>
                        <TableView fx:id="incomingQueueTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="incomingFileColumn" text="File" prefWidth="200"/>
                                <TableColumn fx:id="incomingFromColumn" text="From" prefWidth="120"/>
                                <TableColumn fx:id="incomingSizeColumn" text="Size" prefWidth="80"/>
                                <TableColumn fx:id="incomingStatusColumn" text="Status" prefWidth="180"/>
                            </columns>
                        </TableView>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Button fx:id="approveButton" text="Approve Selected" onAction="#handleApproveFiles"
                                    style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
                            <Button fx:id="rejectButton" text="Reject Selected" onAction="#handleRejectFiles"
                                    style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Button fx:id="clearFinishedButton" text="Clear Finished" onAction="#handleClearFinished"/>
                        </HBox>
                        <Label text="Multi-select and approve/reject files • Up to 3 files transfer simultaneously" 
                               style="-fx-font-size: 10px; -fx-text-fill: #7f8c8d;"/>
                    </VBox>
                </SplitPane>
            </VBox>
            </ScrollPane>
            
            <!-- Logs Section -->
            <ScrollPane fitToWidth="true" fitToHeight="true">
            <VBox spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                
                <Label text="Logs" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                
                <TextArea fx:id="logArea" editable="false" VBox.vgrow="ALWAYS"
                          style="-fx-font-family: monospace; -fx-font-size: 11px;"/>
            </VBox>
            </ScrollPane>
        </SplitPane>
    </center>
    
    <bottom>
        <HBox style="-fx-background-color: #34495e; -fx-padding: 10;" spacing="20">
            <Label text="Status: Ready" style="-fx-text-fill: #ecf0f1;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="Listening on port 8080 • Queue-based transfers" style="-fx-text-fill: #2ecc71;"/>
        </HBox>
    </bottom>
</BorderPane>
